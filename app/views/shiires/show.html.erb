<%- model_class = Shiire -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:kai_code) %>:</strong></dt>
  <dd><%= @shiire.kai_code %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sir_code) %>:</strong></dt>
  <dd><%= @shiire.sir_code %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sir_name) %>:</strong></dt>
  <dd><%= @shiire.sir_name %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              shiires_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_shiire_path(@shiire), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              shiire_path(@shiire),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
