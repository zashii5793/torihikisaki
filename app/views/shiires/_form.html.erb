<%= form_for @shiire, :html => { :class => "form-horizontal shiire" } do |f| %>

  <% if @shiire.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@shiire.errors.count, "error") %> prohibited this shiire from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @shiire.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :kai_code, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :kai_code, :class => 'form-control' %>
    </div>
    <%=f.error_span(:kai_code) %>
  </div>
  <div class="form-group">
    <%= f.label :sir_code, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :sir_code, :class => 'form-control' %>
    </div>
    <%=f.error_span(:sir_code) %>
  </div>
  <div class="form-group">
    <%= f.label :sir_name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :sir_name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:sir_name) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                shiires_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
