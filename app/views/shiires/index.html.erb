<%- model_class = Shiire -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:kai_code) %></th>
      <th><%= model_class.human_attribute_name(:sir_code) %></th>
      <th><%= model_class.human_attribute_name(:sir_name) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @shiires.each do |shiire| %>
      <tr>
        <td><%= link_to shiire.id, shiire_path(shiire) %></td>
        <td><%= shiire.kai_code %></td>
        <td><%= shiire.sir_code %></td>
        <td><%= shiire.sir_name %></td>
        <td><%=l shiire.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_shiire_path(shiire), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      shiire_path(shiire),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_shiire_path,
            :class => 'btn btn-primary' %>
